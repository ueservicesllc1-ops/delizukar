# ==================== STRIPE CONFIGURATION ====================
# Obtén tus claves desde: https://dashboard.stripe.com/apikeys

# Claves de Modo Prueba (para desarrollo)
STRIPE_SECRET_KEY=sk_test_51234567890abcdef...
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_test_51234567890abcdef...

# Claves de Modo Producción (para producción)
# STRIPE_SECRET_KEY=sk_live_...
# REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_live_...

# Secreto de Webhook (obtén desde: https://dashboard.stripe.com/webhooks)
STRIPE_WEBHOOK_SECRET=whsec_...

# ==================== FIREBASE CONFIGURATION ====================
# Obtén tu configuración desde: https://console.firebase.google.com/

REACT_APP_FIREBASE_API_KEY=tu_api_key
REACT_APP_FIREBASE_AUTH_DOMAIN=tu_proyecto.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=tu_proyecto_id
REACT_APP_FIREBASE_STORAGE_BUCKET=tu_proyecto.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=123456789
REACT_APP_FIREBASE_APP_ID=1:123456789:web:abcdef

# ==================== SERVER CONFIGURATION ====================
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# ==================== STRIPE API V2 CONFIGURATION ====================
# Última versión de API para características mejoradas
STRIPE_API_VERSION=2024-09-30.acacia

# ==================== SECURITY CONFIGURATION ====================
# Orígenes CORS (separados por comas para múltiples dominios)
CORS_ORIGINS=http://localhost:3000,https://tudominio.com

# Limitación de velocidad (solicitudes por minuto)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==================== WEBHOOK CONFIGURATION ====================
# URL del endpoint de webhook (para producción)
WEBHOOK_URL=https://tudominio.com/api/webhook

# Eventos a escuchar (separados por comas)
WEBHOOK_EVENTS=payment_intent.succeeded,payment_intent.payment_failed,checkout.session.completed,balance.available

# ==================== PAYMENT CONFIGURATION ====================
# Métodos de pago soportados
PAYMENT_METHODS=card,afterpay_clearpay,klarna,affirm,link,apple_pay,google_pay

# Configuración de moneda
DEFAULT_CURRENCY=usd
SUPPORTED_CURRENCIES=usd,eur,gbp,cad,aud

# Configuración de impuestos
AUTOMATIC_TAX_ENABLED=true
TAX_BEHAVIOR=inclusive

# ==================== RECEIPT CONFIGURATION ====================
# Configuración de recibos automáticos
AUTO_RECEIPT_ENABLED=true
RECEIPT_EMAIL_TEMPLATE=receipt_template

# ==================== BALANCE CONFIGURATION ====================
# Monitoreo de balance
BALANCE_ALERT_THRESHOLD=1000
BALANCE_ALERT_EMAIL=admin@tudominio.com

# ==================== TESTING CONFIGURATION ====================
# Configuración de modo prueba
STRIPE_TEST_MODE=true
TEST_WEBHOOK_SECRET=whsec_test_...

# Números de tarjeta de prueba para desarrollo
TEST_CARD_SUCCESS=4242424242424242
TEST_CARD_DECLINE=4000000000000002
TEST_CARD_3D_SECURE=4000002500003155

# ==================== LOGGING CONFIGURATION ====================
# Niveles de log: error, warn, info, debug
LOG_LEVEL=info
LOG_FILE=logs/app.log

# ==================== MONITORING CONFIGURATION ====================
# Configuración de health check
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Monitoreo de rendimiento
PERFORMANCE_MONITORING=true
METRICS_ENDPOINT=/api/metrics
